# backend/Dockerfile
# Build
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ./Takeaway.Api/*.csproj ./Takeaway.Api/
RUN dotnet restore ./Takeaway.Api/Takeaway.Api.csproj
COPY ./Takeaway.Api ./Takeaway.Api
RUN dotnet publish ./Takeaway.Api/Takeaway.Api.csproj -c Release -o /app/publish /p:UseAppHost=false

# Run
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
COPY --from=build /app/publish .
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080
ENTRYPOINT ["dotnet", "Takeaway.Api.dll"]
